{
    "name": "wujie/rong-client",
    "type": "library",
    "license": "MIT",
    "description": "融云接口",
    "require": {
        "php": ">=7.1",
        "guzzlehttp/guzzle": ">=6.3",
        "ext-json": "*",
        "nesbot/carbon": "^2.30"
    },
    "authors": [
        {
            "name": "武杰",
            "email": "1224805548@qq.com"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^8.5",
        "vlucas/phpdotenv": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "RongLib\\": "Lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RongTest\\": "test/"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit -c phpunit.xml --colors=always",
        "fix": " vendor/bin/php-cs-fixer fix Lib/"
    }
}
